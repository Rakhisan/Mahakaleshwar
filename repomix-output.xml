.call-us a, .mail-us a {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: bold;
}

.whatsapp-icon, .email-icon {
  width: 20px;
  height: 20px;
}

/* Main Navigation with Dropdowns */
.main-nav {
  background-color: var(--dark-color);
}

.main-menu {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  justify-content: space-around;
}

.main-menu > li {
  position: relative;
}

.main-menu > li > a {
  display: block;
  padding: 15px 20px;
  color: white;
  text-decoration: none;
  font-weight: bold;
  white-space: nowrap;
}

.main-menu > li > a:hover {
  background-color: var(--primary-color);
}

.dropdown-menu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background-color: var(--accent-color);
  min-width: 220px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  z-index: 100;
  list-style: none;
}

.dropdown-menu.show {
  display: block;
}

.dropdown-menu li a {
  display: block;
  padding: 12px 15px;
  color: var(--text-dark);
  text-decoration: none;
  transition: background-color 0.3s;
}

.dropdown-menu li a:hover {
  background-color: var(--secondary-color);
  color: var(--text-light);
}

/* Mobile Menu Toggles */
.mobile-menu-toggle, .main-menu-toggle {
  display: none;
  background-color: var(--primary-color);
  color: var(--text-light);
  border: none;
  padding: 10px 15px;
  font-size: 18px;
  cursor: pointer;
  width: 100%;
  text-align: left;
}

